{
  "name": "MoodlyAi",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "lint": "eslint .",
    "start": "react-native start",
    "test": "jest --watch --coverage=false",
    "ts:check": "tsc --noEmit",
    "lint:fix": "eslint . --fix",
    "test-coverage": "jest --coverage",
    "testDebug": "jest -o --watch --coverage=false",
    "testFinal": "jest",
    "cache:clean": "rm -rf node_modules && yarn cache clean && yarn install && watchman watch-del-all && rm -rf $TMPDIR/haste-map-* && rm -rf $TMPDIR/metro-cache && yarn start --reset-cache",
    "git": "git add . && git commit -m",
    "gradle:restore": "cd android && ./gradlew --stop && ./gradlew clean && ./gradlew build && cd ..",
    "pod:install": "cd ios && rm -rf ~/Library/Caches/CocoaPodsrm && pod deintegrate && pod install --repo-update && cd ..",
    "build:apk": "cd android && ./gradlew assembleRelease",
    "build:aab": "cd android && ./gradlew bundleRelease",
    "pre-commit": "lint-staged && npm run check-branch-name",
    "check-branch": "node scripts/checkBranchName.js",
    "prepare": "husky"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^2.1.2",
    "@react-native-clipboard/clipboard": "^1.16.2",
    "@react-native-community/netinfo": "^11.4.1",
    "@react-navigation/bottom-tabs": "^7.3.13",
    "@react-navigation/drawer": "^7.3.12",
    "@react-navigation/native": "^7.1.9",
    "@react-navigation/native-stack": "^7.3.13",
    "@reduxjs/toolkit": "^2.8.2",
    "@testing-library/react-native": "^13.2.0",
    "@types/react-native-dotenv": "^0.2.2",
    "@types/react-native-sqlite-storage": "^6.0.5",
    "@types/react-redux": "^7.1.34",
    "axios": "^1.9.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "formik": "^2.4.6",
    "lint-staged": "^16.0.0",
    "lottie-ios": "4.5.0",
    "lottie-react-native": "^7.2.2",
    "lucide-react-native": "^0.509.0",
    "moment": "^2.30.1",
    "react": "19.0.0",
    "react-native": "0.79.2",
    "react-native-android-open-settings": "^1.3.0",
    "react-native-device-info": "14.0.4",
    "react-native-gesture-handler": "^2.25.0",
    "react-native-haptic-feedback": "^2.3.3",
    "react-native-image-picker": "^8.2.1",
    "react-native-keyboard-aware-scroll-view": "^0.9.5",
    "react-native-linear-gradient": "^2.8.3",
    "react-native-notifier": "^2.0.0",
    "react-native-permissions": "^5.4.0",
    "react-native-reanimated": "^3.17.5",
    "react-native-safe-area-context": "^5.4.0",
    "react-native-screens": "^4.10.0",
    "react-native-sqlite-storage": "^6.0.1",
    "react-native-svg": "^15.12.0",
    "react-redux": "^9.2.0",
    "redux-persist": "^6.0.0",
    "yup": "^1.6.1"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/runtime": "^7.25.0",
    "@react-native-community/cli": "18.0.0",
    "@react-native-community/cli-platform-android": "18.0.0",
    "@react-native-community/cli-platform-ios": "18.0.0",
    "@react-native/babel-preset": "0.79.2",
    "@react-native/eslint-config": "0.79.2",
    "@react-native/metro-config": "0.79.2",
    "@react-native/typescript-config": "0.79.2",
    "@types/jest": "^29.5.13",
    "@types/react": "^19.0.0",
    "@types/react-test-renderer": "^19.0.0",
    "eslint": "^8.19.0",
    "eslint-config-universe": "15.0.3",
    "husky": "^9.1.7",
    "jest": "^29.6.3",
    "prettier": "2.8.8",
    "react-native-dotenv": "^3.4.11",
    "react-test-renderer": "19.0.0",
    "typescript": "5.0.4"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": "prettier --write"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "engines": {
    "node": ">=18"
  }
}
